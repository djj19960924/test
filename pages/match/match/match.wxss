page{
  background: #E5E5E5;
}
/* search */
.search{
  display: flex;
  flex-direction: row;
  width: 100%;
  padding: 5px 12px 12px 12px;
  background: #fff;
}
.searchInput{
  height: 28px;
  border: 0;
  background: #E5E5E5;
  border-radius: 50px;
  width: 100%;
  font-size: 12px;
  text-align: center;
  color: #8F8F8F;
  padding: 0 40px;
  box-sizing: border-box;
}
.searchPlaceholder{
  font-size: 12px;
  text-align: center;
  color: #8F8F8F
}
.searchBtn{
  position:absolute;
  top:-2px;
  right:5px;
  width:30px;
  text-align:center;
}
.searchRight{
  font-size: 26rpx;
  color: #25A1DC;
  font-weight: 900;
  height: 28px;
  line-height: 28px;
  width: 90px;
  text-align: right;
}

/* banner */
.banner{
  width: 100%;
  background: #fff;
  padding:16px 12px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 5px;
  margin-top: 5px;
}
.bannerImgp{
  width: 30%;
  height: 48px;
  border-radius: 5px;
  overflow: hidden;
  position: relative;
}
.bannerImg{
  width: 100%;
  border-radius: 5px;
}
.modal{
  position: absolute;
  width: 100%;
  text-align: center;
  top: 0px;
  color: #fff;
  background: rgba(0, 0, 0, 0.4);
  font-size: 30rpx;
  height: 100%;
  line-height: 48px;
}

/* 本周下周 */
.week{
  width: 100%;
  background: #fff;
  padding: 16px 30px;
  margin-bottom: 5px;
}
.weekC{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.thisWeek{
  text-align: left;
  font-size: 32rpx;
  width: 50%;
  border-right: 1px solid #DEDEDE;
}
.nextWeek{
  text-align: right;
  font-size: 32rpx;
  width: 50%;
  border-left: 1px solid #DEDEDE;
}
.weekNum{
  font-size: 42rpx;
  color: #0192D6;
}

/* list title */
.list_container{
  width: 100%;
  padding: 12px;
  background: #fff;
}
.list_title{
  position: relative;
  height: 32px;
  line-height: 32px;
  margin-bottom: 10px;
}
.list_title_tab{
  color: #929292;
  font-size: 30rpx;
  padding-right: 20px;
}
.active{
  color: #0192D6
}
.more{
  position: absolute;
  right: 0;
  font-size: 28rpx;
  color: #929292;
}
/* list */
.listItem{
  width: 100%;
  margin-bottom: 16px;
}
.itemTop{
  width: 100%;
  height: 120px;
  border-radius: 5px;
  overflow: hidden;
}
.itemImg{
  width: 100%;
  border-radius: 5px;
}
.itemCenter{
  color: #000;
  font-size: 32rpx;
  margin: 6px 0 1px 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.itemBottom{
  font-size: 24rpx;
}
.itemBottomRight{
  float: right;
}
.itemFooter{
  font-size: 24rpx;
  color: #0192D6;
  margin-top: 6px;
}
.itemFooterRight{
  float: right;
}
.itemFooterLeft1{
  color: #fff;
  background: #0192D6;
  padding: 3px 8px;
  border-radius: 3px;
  font-size: 20rpx;
  margin-right: 12px;
}
.itemFooterLeft2{
  border: 1px solid #0192D6;
  padding: 2px 8px;
  border-radius: 3px;
  font-size: 20rpx;
  margin-right: 10px;
}