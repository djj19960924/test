page{
  background: #E5E5E5;
}
.bg{
  width: 100%;
  z-index: -100;
  position: absolute;
}
/* header */
.header{
  display: flex;
  flex-direction: row;
  padding: 30px 16px;
  width: 100%;
}
.headerImgp{
  width: 66px;
  height: 66px;
  overflow: hidden;
  margin-right: 16px;
}
.headerImg{
  width: 100%;
}
.headerRight{
  width: calc(100% - 160px);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.headerRightTop{
  color: #fff;
  font-size: 18px;
  font-weight: 900;
}
.headerRightBottom{
  font-size: 12px;
  color: #B8BCC5;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}

/* content */
.content{
  background: #fff;
  border-radius: 10px;
  padding-top: 16px;
  box-sizing: border-box;
}
.gonggaop{
  border-bottom: 5px solid #E5E5E5;
  padding: 0 16px 16px 16px;
}
.gonggao{
  font-size: 14px;
  margin-top: 5px;
  text-indent:2em;
}
.memberp{
  border-bottom: 5px solid #E5E5E5;
  padding: 16px;
}
.userGroup{
  margin-top: 16px;
  display: flex;
  flex-direction: row;
}
.userGroupText{
  font-size: 13px;
  width: 100%;
  text-align: right;
  line-height: 38px;
}
.huodongp{
  padding: 16px;
}
.huodong{
  padding: 24rpx 0;
  border-bottom: 1px solid #E1E1E1;
}
.huodong:last-child{
  border: 0;
}

/* footer */
.fixedBtn{
  position: fixed;
  width: 100%;
  color: #fff;
  background: #0192D6;
  height: 48px;
  line-height: 48px;
  text-align: center;
  font-size: 30rpx;
  bottom: 0;
}
.fixedBtn_hover{
  background: #0881B9
}