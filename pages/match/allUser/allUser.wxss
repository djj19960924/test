.container{
  width: 100%;
  padding: 16px;
  padding-top: 0;
}
.item{
  display: flex;
  flex-direction: row;
  padding: 12px 0;
  border-bottom: 1px solid #E6E6E6;
  width: 100%;
}
.item:last-child{
  border: 0;
}
.imgp{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24px;
}
.img{
  width: 100%;
}
.text{
  font-size: 18px;
  color: #000000;
  line-height: 50px;
}
.tips{
  line-height: 43px;
  margin-left: 12px;
}
.tipst{
  color: #fff;
  font-size: 10px;
  padding: 2px 8px;
  background: #FB6701;
  border-radius: 3px;
}