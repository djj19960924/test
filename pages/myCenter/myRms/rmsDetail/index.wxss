.content{
  width: 100%;
  padding: 0 24rpx;
}
.orderNo{
  font-size: 32rpx;
  width: 100%;
  border-bottom: 1px solid #CCCCCC;
  padding: 24rpx 0;
  color: #000;
}
.title{
  font-size: 30rpx;
  margin: 30rpx 0;
}
.voice{
  width:80px;
  height:28px;
  line-height:28px;
  color: #50B4E3;
  border: 1px solid #50B4E3;
  border-radius: 50px;
  text-align: right;
  font-size: 28rpx;
  font-weight: 900;
  padding: 0 10px;
  margin-top: 8px;
  position: relative;
}
.voiceIcon{
  position: absolute;
  left: 8px;
  top: 2px;
}
.img{
  width: 100%;
}
.imgP{
  display: inline-block;
  width: 60px;
  height: 60px;
  overflow: hidden;
  margin-top: 5px;
  margin-right: 8px;
}