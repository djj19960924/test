.cardContainer{
  width: 94%;
  display: flex;
  flex-direction: row;
  margin: auto;
  padding: 12px 16px 12px 0;
  position: relative;
  border-bottom: 1px solid #DDDEE1;
}
.cardContainer:last-child{
  border: 0;
}
.badge{
  position:absolute;
  right:0;
  top:29px;
  border-radius:50%;
  color:#fff;
  background:#FD0D0D;
  width:18px;
  height:18px;
  line-height:18px;
  font-size:10px;
  text-align: center;
}
.left{
  margin-right: 16px;
  overflow: hidden;
  width: 46px;
  height: 46px;
  border-radius: 50%;
}
.leftImg{
  width: 100%;
  margin: auto;
}
.right{
  width: calc(100% - 80px);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.rightMain{
  width: 100%;
  font-size: 16px;
  color: #1c2438;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}
.rightSub{
  width: 100%;
  font-size: 12px;
  color: #80848F;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}
.time{
  font-size: 11px;
  margin-left: 16px;
}


















