view{
  color:#1c2438;
}
.detailHeaderimg{
  width: 100%;
  vertical-align: middle;
}
.container{
  position: absolute;
  top: 0;
  width: 100%;
}
.ding{
  width: 100%;
}
.content{
  width: 96%;
  margin: 0 auto;
  min-height: 300px;
  background: #fff;
  border-radius: 5px;
  padding: 32rpx;
}
.man{
  display: flex;
}
.manLeft{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.manImg{
  width: 100%;
  height: 100%;
}
.manRight{
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.manname{
  font-size: 32rpx;
}
.fuwunum{
  margin-left:20rpx;
  color:#0895D7;
  font-size: 30rpx;
  font-weight: 900;
}
.skill{
  margin: 32rpx 6rpx;
}
.skillIcon{
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.skillText{
  font-size: 28rpx;
  font-weight: 900;
}
.skillContent{
  font-size: 28rpx;
  line-height: 44rpx;
  margin-top: 10rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  /* -webkit-line-clamp:3; */
}
.wantzixun{
  border-radius: 50px;
  color: #D3E5F3;
  font-size: 30rpx;
  text-align: center;
  width: 100%;
  padding: 18rpx 0;
  background: -webkit-linear-gradient(left, #0856A7 , #009CDE); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #0856A7, #009CDE); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #0856A7, #009CDE); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #0856A7 , #009CDE); /* 标准的语法（必须放在最后） */
}

.back{
  position: absolute;
  top: 0px;
  left: 32rpx;
  font-size: 13px;
}