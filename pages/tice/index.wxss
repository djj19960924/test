/* top */
.top{
  width: 100%;
  height: calc(26vh + 26px);
  background: #E2E2E2;
  position: relative;
}
.banner{
  height: 26vh;
  width: 100%;
}
.topContent{
  width: 100%;
  padding: 0 12px;
  position: absolute;
  bottom: 6px;
}
.top_userp{
  padding: 0 6px;
  margin-bottom: 16px;
  display: flex;
  flex-direction: row;
}
.top_userHead{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
  margin-right: 10px;
}
.top_userInfo{
  color: #EFF5F4;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.seximg{
  width: 15px;
  height:15px;
}
.top_userInfo_birth{
  background: #fff;
  color: #9CBFBB;
  font-size: 10px;
  border-radius: 50px;
  padding: 0 6px;
  margin-left: 8px;
}
.btnp{
  width: 100%;
  padding: 16px 16px;
  background: #fff;
  border-radius: 3px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.btnItem{
  display: flex;
  width: 50%;
}
.btnImg{
  width: 32px;
  height: 32px;
  margin-right: 10px;
  margin-top: 6px;
}
.btnItemRight{
  width: calc(100% - 42px)
}
.btnItemRightTop{
  font-size: 15px;
}
.btnItemRightBottom{
  font-size: 24rpx; 
}

/* center */
.center{
  padding: 16px 12px;
}
.centerTitle{
  color: #0594D7;
  font-size: 30rpx;
}
.centerp{
  width: 100%;
  padding-top: 6px;
}
.centerpimg{
  width: 100%
}
/* center1 */
.center1{
  width: 100%;
  height: 8vh;
  position: relative;
  color: #fff;
  padding: 10px 12px 10px 15vw;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.center1_img{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -100ï¼›
}
.center1_1{
  z-index: 100;
  font-weight: 900;
}
.center1_2{
  z-index: 100;
  font-size: 22rpx;
  color: #FFA591;
}
.center1_btn{
  font-size: 22rpx;
  color: #FF5727;
  background: #fff;
  padding: 2px 8px;
  border-radius: 50px;
  position: absolute;
  right: 12px;
  z-index: 1000;
}
.center1_btn_o{
  font-size: 22rpx;
  color: #fff;
  background: #BCBBBB;
  padding: 2px 8px;
  border-radius: 50px;
  position: absolute;
  right: 12px;
  z-index: 1000;
}
.tipsicon{
  position: absolute;
  left: 25rpx;
  width: 52rpx;
  height: 75rpx;
}

/* list */
.listTitle{
  padding: 6px 12px;
  font-size: 32rpx;
}
.listContainer{
  padding: 0 12px;
}
.listItem{
  border-bottom: 1px solid #DEDEDE;
  padding: 20rpx 0;
  height: 140rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.listItem:last-child{
  border: 0;
}
.listItem1{
  height: 100rpx;
  line-height: 100rpx;
}
.listItem2{
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.listItem3{
  height: 100rpx;
  width: 200rpx;
}
.listItem4{
  height: 100rpx;
  line-height: 100rpx;
}
.listItem1Img{
  width: 100rpx;
