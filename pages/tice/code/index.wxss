page{
  background: #DCDCDC;
  height: 100vh;
  width: 100%;
}
.container{
  margin: 5vh 10vw;
  background: #fff;
  border-radius: 5px;
  padding: 16px;
}
.header{
  display: flex;
  width: 100%;
}
.header_img{
  width: 50px;
  height: 50px;
  border-radius: 3px;
  overflow: hidden;
  margin-right: 12px;
}
.header_name{
  font-size: 32rpx;
  line-height: 50px;
}
.code{
  width:400rpx;
  height: 400rpx;
  margin-top: 50rpx;
}
.codeImg{
  width: 100%;
  height: 100%;
}
.text1{
  width: 100%;
  margin: 12px 0 5px 0;
  font-size: 24rpx;
  text-align: center;
}
.text2{
  width: 100%;
  font-size: 24rpx;
  text-align: center;
}
.logop{
  position: absolute;
  bottom: 20px;
  width: 100%;
  text-align: center;
}
.logo{
  width: 164rpx;
}