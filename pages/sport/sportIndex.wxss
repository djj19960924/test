.bg{
  width: 100%;
  vertical-align: middle;
  position: absolute;
  top: 0;
}

/* tab */
.tabContainer{
  width: 100%;
  position: relative;
}
.tab{
  width: 100%;
  text-align: center;
  display: inline-block;
  margin: 0 auto;
}
.tabRight{
  color: #fff;
  font-size: 30rpx;
  padding: 10rpx 36rpx 10rpx 24rpx;
  border-radius: 0 50px 50px 0;
  border: 1px solid #ACAFB2;
  border-left: 0;
}
.tabLeft{
  color: #1FACED;
  font-size: 30rpx;
  padding: 10rpx 24rpx 10rpx 36rpx;
  background: #fff;
  border-radius: 50px 0 0 50px;
  border: 1px solid #fff;
  border-right: 0;
}
.rili{
  position: absolute;
  top: 0;
  right: 28rpx;
}
/* run */
.runContainer{
  width: 100%;
  height: 450rpx;
  text-align: center;
  margin-top: 50rpx;
  position: relative;
}
.runbg{
  width: 450rpx;
  height: 450rpx;
}
.runContent{
  position: absolute;
  top: 100rpx;
  color: #fff;
  width: 100%;
  text-align: center;
}
.run_c_1{
  font-size: 32rpx;
  /* margin-top:10rpx; */
}
.run_c_2{
  font-size:80rpx;
  font-weight:900;
  /* margin-top:8rpx; */
}
.run_c_3{
  font-size: 24rpx;
  /* margin-top:10rpx; */
}
.run_c_4{
  font-size:24rpx;
  margin-top:20rpx;
}
.run_c_4_btn{
  padding:6rpx 16rpx;
  background:#1EAEF1;
  border-radius:50px;
}

/* hu */
.hu{
  height:30vh;
  width:180%;
  background:#fff;
  border-radius:50%;
  position:absolute;
  left:-40%;
  margin-top: 36rpx;
  z-index: -99
}

/* content */
.content{
  width: 100%;
  margin-top:80rpx;
  padding-bottom: 30rpx;
}
.title{
  font-size: 34rpx;
  font-weight: 900;
  margin: 20rpx 0;
  position: relative;
}
.titleRight{
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  font-size: 28rpx;
  color: #0192D6;
  font-weight: 400;
}
.cutline{
  width: 100%;
  height: 12rpx;
  background: #E5E5E5;
}

/* 科学建议 */
.adviceLine1{
  display:flex;
  width:100%;
  border-bottom:1px solid #DEDEDE;
  padding-bottom: 10rpx;
}
.adviceItem{
  width: 50%;
}
.adviceTitle,.adviceNum{
  font-size: 24rpx;
}
.adviceValue{
  font-size: 48rpx;
  color: #0192D6;
  font-weight: 900
}

/* 运动记录 */
.sportItem{
  display: flex;
  border-bottom: 1px solid #E6E6E6;
  padding:24rpx 0;
}
.sportItem:last-child{
  border: 0;
}
.sportImg{
  width: 92rpx;
  height: 92rpx;
  margin-right: 16rpx;
}
.sportInfo{
  position: relative;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.sportInfoLine1{
  font-size: 30rpx;
}
.sportInfoLine2{
  font-size: 24rpx;
}
.sportEnter{
  position: absolute;
  right: 0;
  top: 16rpx;
}

/* 饮食记录 */
.foodImgp{
  width: 120rpx;
  height: 92rpx;
  margin-right: 16rpx;
  overflow: hidden;
  border-radius: 3px;
}
.foodImg{
  width: 100%;
  border-radius: 3px;
}