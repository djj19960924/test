/**app.wxss**/
@import "style/weui.wxss";
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.spinContainer{
  background-color:rgba(255,255,255,0)!important;
}
.listLoading{
  height: 60rpx;
  background: #fff;
  text-align: center;
  font-size: 12px;
}
view,text{
  box-sizing: border-box;
}
image{
  width: auto;
  height: auto;
}

/* white header */
.whitePageTitle{
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  position: absolute;
  width: 100%;
}

/* color */
.c_theme{
  color: #2D8CF0;
}
.c_title{
  color:#1c2438;
}
.c_content{
  color: #495060;
}
.c_sub{
  color: #80848F;
}
.c_disabled{
  color: #BBBEC4;
}
.c_border{
  color: #DDDEE1;
}
.c_divider{
  color: #E9EAEC;
}
.c_success{
  color: #19BE6B
}
.c_warning{
  color: #FF9900
}
.c_error{
  color: #ED3F14
}

/* nodata */
.nodata{
  text-align: center;
  width: 100%;
  margin-top: 10vh;
}
.nodataImg{
  width: 120px;
  height: 120px;
}
.nodataTxt{
  color: #BBBEC4;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
}

/* 滚动条隐藏 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}